# Example environment configuration for Solarium Web Portal
# Copy this file to .env.local and modify the values as needed

# Environment identifier (DEVELOPMENT | STAGING | PRODUCTION)
REACT_APP_ENVIRONMENT=DEVELOPMENT

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000

# Session Configuration (in minutes)
REACT_APP_SESSION_TIMEOUT_MIN=30

# Application Configuration
REACT_APP_APP_NAME=Solarium Web Portal
REACT_APP_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Build Configuration
GENERATE_SOURCEMAP=true

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_ENVIRONMENT=development
VITE_SESSION_TIMEOUT_MIN=30

# Security Configuration
VITE_CRYPTO_SECRET="7cgLH9F5pcMKby887gOI5qP6vzEtCnLo51YvdpS53Ys="

# API Configuration
VITE_API_TIMEOUT=30000

# Environment
VITE_ENVIRONMENT=DEV

# Session Configuration
VITE_SESSION_TIMEOUT_MIN=30
VITE_SESSION_WARNING_MIN=5

# Security

# Feature Flags
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_MOCK_AUTH=true
VITE_ENABLE_SERVICE_WORKER=false

# Build Information
VITE_BUILD_NUMBER=local-dev
VITE_VERSION=1.0.0-dev

# Debug Settings
VITE_LOG_LEVEL=debug
VITE_SHOW_REDUX_DEVTOOLS=true